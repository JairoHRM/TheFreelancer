<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:backgroundTint="#DCE0F6"
        app:cardCornerRadius="18sp"
        app:cardElevation="7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/c_frlncrprofile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/frlncr"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/j_cnsmrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="1dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/c_profesion"
                app:layout_constraintStart_toEndOf="@+id/c_frlncrprofile_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/c_profesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Profesión"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/c_calificacion"
                app:layout_constraintStart_toEndOf="@+id/c_frlncrprofile_image"
                app:layout_constraintTop_toBottomOf="@+id/j_cnsmrname" />

            <TextView
                android:id="@+id/c_calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Calificación"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/c_comentarios"
                app:layout_constraintStart_toEndOf="@+id/c_frlncrprofile_image"
                app:layout_constraintTop_toBottomOf="@+id/c_profesion" />

            <TextView
                android:id="@+id/c_comentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Comentarios"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/c_frlncrprofile_image"
                app:layout_constraintTop_toBottomOf="@+id/c_calificacion" />

            <TextView
                android:id="@+id/k_vermas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="11dp"
                android:text="Ver mas..."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/c_comentarios" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>